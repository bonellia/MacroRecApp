<resources>

    <!-- Base application theme. -->
    <style name="app_theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <style name="form_hint_text">
        <item name="android:textColor">#969696</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="LargeButtonText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="create_acc">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="searching_devices">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="warning_device">
        <item name="android:textColor">#959595</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="text_settings_item">
        <item name="android:textColor">#fff7f8f9</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="text_settings_headline">
        <item name="android:textColor">#fff8f5f5</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="text_settings_element">
        <item name="android:textColor">#fff7f8f9</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
